@model IEnumerable<eComplaints.Models.jsReport.jsReport>

@(Html.Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.IdentificationNumber).Titled("Numar").Filterable(true);
                columns.Add(model => model.Area).Titled("Linie").Filterable(true);
                columns.Add(model => model.DateHour).Titled("Data");
                columns.Add(model => model.PhenomenaCategory).Titled("Tip material").Filterable(true);
                columns.Add(model => model.Problem).Titled("Problema").Filterable(true);
                columns.Add(model => model.IsRelevant).Titled("Relevant").Filterable(true);
                columns.Add(model => model.Id).RenderedAs(model => Html.ActionLink("Download", "DownloadTest", new { reportId = model.Id })).Titled("Download");
            })
             .Sortable()
             .Pageable(pager =>
             {
                 pager.RowsPerPage = 10;
                 pager.CurrentPage = 1;
             })
             .Empty("Nu exista plangeri")
)