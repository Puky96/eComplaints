@model eComplaints.Models.ManageViewModels.EditLineCoordinatorViewModel

@{
    ViewData["Title"] = "EditLineCoordinator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editeaza coordonator de linie</h2>

<form asp-action="EditLineCoordinator">
    <div class="form-horizontal">
        <input asp-for="AreaId" type="hidden" class="form-control" />
        <input asp-for="Id" type="hidden" class="form-control" />
        <div class="form-group">
            <label asp-for="AreaName" class="col-md-2 control-label"></label>
            @Html.DisplayFor(model => model.AreaName)
        </div>
        <div class="form-group">
            <label asp-for="LineCoordinatorName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LineCoordinatorName" class="form-control" />
                <span asp-validation-for="LineCoordinatorName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salveaza" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
