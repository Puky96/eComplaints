@model IEnumerable<eComplaints.Models.ManageViewModels.ViewInvestigatorItem>

@{
    ViewData["Title"] = "ViewInvestigators";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<br />
<p>
    <a asp-action="AddInvestigator">Adauga investigator</a>
</p>
<label class="text-danger">@ViewBag.Message</label>

<br />
@(Html.Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Username).Titled("Username").Filterable(true);
                columns.Add(model => model.Department).Titled("Departament").Filterable(true);
                columns.Add(model => Html.ActionLink("Sterge", "DeleteInvestigator", new { userId = model.Id })).Titled("Sterge");
            })
            .Sortable()
            .Empty("Nu exista investigatori adaugati!")
            .Pageable(pager =>
            {
                pager.RowsPerPage = 10;
                pager.CurrentPage = 1;
            })

)

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/MvcGrid/mvc-grid.js"></script>

<script>
    $('.mvc-grid').mvcgrid();
</script>