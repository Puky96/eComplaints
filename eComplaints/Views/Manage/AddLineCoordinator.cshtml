@model eComplaints.Models.ManageViewModels.LineCoordinatorModel

@{
    ViewData["Title"] = "AddLineCoordinator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adauga coordonator de linie</h2>

<form asp-action="AddLineCoordinator">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label class="text-danger">@ViewBag.Message</label>
        <div class="form-group">
            <label asp-for="CoordinatorName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CoordinatorName" class="form-control" />
                <span asp-validation-for="CoordinatorName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Area" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Area" class="form-control" asp-items="@ViewBag.Areas"></select>
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
